@model CoffeeShop.WebUI.ViewModels.ShoppingCart.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}

<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    @Html.ActionLink("Checkout >>", "Pay", "Checkout")
</p>
<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Order
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CartItems)
    {
        <tr id="row-@item.CoffeeId">
            <td>
                @item.CoffeeDescription
            </td>
            <td>
                @item.CoffeeCost
            </td>
            <td id="item-count-@item.CoffeeId">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink" data-id="@item.CoffeeId">
                    Remove from cart
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/App/requester.js"></script>

    <script type="text/javascript">


        $(function () {
            // Handler for .ready() called.
            console.log(requester)
            $('.RemoveLink').on("click", function (e) {

                var recordToDelete = $(this).attr("data-id");

                if (recordToDelete != '') {
                    var url = "/ShoppingCart/RemoveFromCart"; @*"@Url.Action("RemoveFromCart", "ShoppingCart")";*@
                    var body = { "id": recordToDelete };

                    requester.ajaxPost(url, body)
                        .then(data => {

                            if (data.ItemCount == 0) {
                                $('#row-' + data.DeleteId).fadeOut('slow');
                            } else {
                                $('#item-count-' + data.DeleteId).text(data.ItemCount);
                            }
                            $('#cart-total').text(data.CartTotal);
                            $('#update-message').text(data.Message);
                            $('#cart-status').text('Cart (' + data.CartCount + ')');

                        });
                }
            })
        });

    </script>
}